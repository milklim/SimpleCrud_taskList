<%= form_for :task do |f|-%>
    <%= f.text_field :name, placeholder: t('name') %>
    <%= f.text_field :description, placeholder: t('description') %>
    <%= f.text_field :importance, placeholder: t('importance') %>
    <%= f.date_select :expiry, order: [:day, :month, :year] %>
    <%= f.submit t("save") %>
<% end %>

