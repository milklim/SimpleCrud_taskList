<div>

  <%= link_to t('new_task'), 'tasks/new', class: 'btn btn-secondary'%>

  <% @tasks.each do |task| %>
    <% if task.done %>
      <% card_color = 'bg-success' %>
    <% else %>
      <% card_color = case task.importance %>
        <% when "high"%>
          <% 'bg-danger'%>
        <%when "middle"%>
          <%'bg-warning'%>
        <%  when "low"%>
          <%'bg-light'%>
      <% end %>
    <% end %>
  <div class="card <%= card_color %>">
    <div class="card-body">
      <h4 class="card-title"><%= task.name %></h4>
      <p class="card-text"><%= task.description %></p>
        <span class="badge badge-light">
          <a href="#" class="card-link"><%= link_to t('edit'), edit_task_path(id: task.id)%></a>
        </span>
        <span class="badge badge-light">
          <a href="#" class="card-link"><%= link_to t('delete'), delete_task_path(id: task.id), method: :delete %></a>
        </span>
        <span class="float-right"><%= task.expiry %></span>
    </div>
  </div>
  <% end %>

</div>